{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "outDir": "dist",
    "rootDir": "src",
    "types": ["vite/client", "@webgpu/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}

